#include <stdio.h>
int main() {
    int n,reversed=0,original;
    printf("enter an integer:");
    scanf("%d",&n);
    original=n;
    for(; n!=0; n/=10)
    {
    reversed=reversed*10+n%10;
    }
    if(original==reversed)
    {
    printf("%d is a palindrome.",original);
    }
    else{
    printf("%d is not a palindrome.",original);
    }
    return 0;
}
